<!DOCTYPE html>
<html>
  <head>
    <title>Karthik</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div style="width:100%">
      <div style="width:20%;float:left;background:blue;">
        Sidebar
      </div>      
      <div style="width:80%;float:left;background:#efefef">
          <% flash.each do |name, msg| -%>
            <%= content_tag :div, msg, class: name %>
          <% end -%>
          <%= yield %>
      </div>
    </div>

  </body>
</html>
