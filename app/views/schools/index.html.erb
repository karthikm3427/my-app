<h3>Schools</h3>

<table>
<thead>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% @schools.each do |school| %>
    <tr>
      <td><%= school.name %></td>
      <td><%= school.address %></td>
      <td>
        <%= link_to "Edit", edit_school_path(school) %>
        <%= link_to "Show", school_path(school) %>
        <%= link_to "Remove", school_path(school), method: :delete, confirm: "Are you sure?" %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>


<%= link_to "New School", new_school_path %>

